{
  "manifest_version": 2,

  "name": "Investing Discussions Plus",
  "description": "An extension that adds extra features for the discussions section on https://investing.com",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Investing Discussions Plus"
  },

  "content_scripts": [
    {
      "matches": ["http://www.investing.com/*", "https://www.investing.com/*"],
      "js": ["js/contentScript.js"]
    }
  ],

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["activeTab", "storage"]
}
